<Window x:Class="OpenBusDrivingSimulator.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:OpenBusDrivingSimulator.GUI"
        Title="{Binding Strings.Title}" Height="350" Width="525"
        Visibility="{Binding IsVisible, Mode=TwoWay, Converter={StaticResource boolToVisibilityConverter}}"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Window.DataContext>
        <local:MainWindowModel />
    </Window.DataContext>
    <Grid>
        <Button Content="{Binding Strings.StartGame}" Command="{Binding StartGameCommand}" HorizontalAlignment="Left" Margin="194,141,0,0" VerticalAlignment="Top" Width="119" Height="53"/>
    </Grid>
</Window>
