<Window x:Class="OpenBus.GUI.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:model="clr-namespace:OpenBus.GUI.ViewModel"
        Title="{Binding Strings.Title}"  Width="{Binding ScreenSize.Width}" Height="{Binding ScreenSize.Height}"
        Visibility="{Binding IsVisible, Mode=TwoWay, Converter={StaticResource boolToVisibilityConverter}}"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Window.DataContext>
        <model:MainWindowModel />
    </Window.DataContext>
    <Grid>
        <Button Content="{Binding Strings.StartGame}" Command="{Binding StartGameCommand}" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="119" Height="53"/>
        <Label Content="{Binding Strings.VersionNumber}" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="149" Background="Red" Foreground="White"/>
    </Grid>
</Window>
