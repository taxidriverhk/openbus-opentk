<Window x:Class="OpenBusDrivingSimulator.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:core="clr-namespace:OpenBusDrivingSimulator.Core;assembly=OpenBusDrivingSimulator.Core"
        Title="{Binding Source={x:Static core:Constants.APPLICATION_NAME}}" Height="350" Width="525"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Button Content="{Binding Source={x:Static core:Constants.START_GAME}}" HorizontalAlignment="Left" Margin="194,141,0,0" VerticalAlignment="Top" Width="119" Height="53" Click="StartGameButton_Click"/>
    </Grid>
</Window>
